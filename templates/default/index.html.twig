{% extends 'default/base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <!-- start padding container -->
    <div class="wrap">
        <!-- start jtinder container -->
        <div id="tinderslide">
            <ul>
                {% for cat in cats %}
                    <li class="pane{{ cat.id }}" data-id="{{ cat.id }}">
                        <div class="img" style="background: url('{{ cat.image }}') "></div>
                        <div>{{ cat.name }}</div>
                        <div class="like"></div>
                        <div class="dislike"></div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <!-- end jtinder container -->
    </div>
    <!-- end padding container -->

    <!-- jTinder trigger by buttons  -->
    <div class="actions">
        <a href="#" class="dislike"><i></i></a>
        <a href="#" class="like"><i></i></a>
    </div>

    <!-- jTinder status text  -->
    <div id="status"></div>

    <!-- jQuery lib -->
    <script type="text/javascript" src="{{ asset('/assets/js/jquery.min.js') }}"></script>
    <!-- transform2d lib -->
    <script type="text/javascript" src="{{ asset('/assets/js/jquery.transform2d.js') }}"></script>
    <!-- jTinder lib -->
    <script type="text/javascript" src="{{ asset('/assets/js/jquery.jTinder.js') }}"></script>
    <!-- jTinder initialization script -->
    <script type="text/javascript" src="{{ asset('assets/js/main.js') }}"></script>

{% endblock %}
